@page "/"

@using Models
@using System.Collections
@inject IModel Model

<h1>List of Adults</h1>

<p>In this page you can view the list of adults.</p>

@if (adults == null)
{
    <p><em>Loading...</em></p>
} 
else 
{
    /*new Adult
    {
        Id = 2,
        Age = 20,
        EyeColor = "Green",
        FirstName = "bob",
        HairColor = "Black",
        Height = 123,
        Weight = 299,
        JobTitle = "jobmuch",
        LastName = "boom",
        Sex = "M"
    }*/
    <table>
        <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Age</th>
            <th>Occupation</th>
            <th>Eye color</th>
            <th>Hair color</th>
            <th>Weight</th>
            <th>Height</th>
            <th>Sex</th>
        </tr>
        </thead>
        <tbody>
            @foreach(var adult in adults)
            {
                <tr>
                    <td>@adult.Id</td>
                    <td>@adult.FirstName</td>
                    <td>@adult.LastName</td>
                    <td>@adult.Age</td>
                    <td>@adult.JobTitle</td>
                    <td>@adult.EyeColor</td>
                    <td>@adult.HairColor</td>
                    <td>@adult.Weight</td>
                    <td>@adult.Height</td>
                    <td>@adult.Sex</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private IList<Adult> adults;
    protected override async Task OnInitializedAsync(){
        adults = await Model.GetAdults();
    }
}